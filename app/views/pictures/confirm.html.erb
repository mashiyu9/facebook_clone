<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @picture, url: confirm_new_or_edit,method: confirm_form_method, local: true) do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :image %>

  <p>タイトル:<%= @picture.title %></p>
  <p>本文:<%= @picture.content %></p>
  <%= form.submit  "登録する" %>
  <%= form.submit "戻る", name: "back" %>
<% end %>
